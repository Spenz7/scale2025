<mvc:View xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          controllerName="project1.controller.Engagement"
          displayBlock="true">
    <App id="app">
        <pages>
            <Page id="page" title="Passenger Engagement">
                <content>
                    <VBox id="mainVBox">
                        <Label id="passengerLabel" text="Select Passenger" labelFor="passengerSelect"/>
                        <ComboBox id="passengerSelect"
                                  items="{engagement>/Passengers}"
                                  width="300px">
                            <items>
                                <core:Item id="passengerItemTemplate" 
                                           key="{engagement>ID}"
                                           text="{engagement>Name} ({engagement>Email})"/>
                            </items>
                        </ComboBox>

                        <Label id="flightLabel" text="Select Flight" labelFor="flightSelect"/>
                        <ComboBox id="flightSelect"
                                  items="{engagement>/Flights}"
                                  width="300px">
                            <items>
                                <core:Item id="flightItemTemplate"
                                           key="{engagement>FlightNumber}"
                                           text="{engagement>Destination} - {engagement>DepartureDate}"/>
                            </items>
                        </ComboBox>

                        <Button id="sendBtn" 
                                text="Send Offer" 
                                press=".onSendOffer"
                                class="sapUiSmallMarginTop"/>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
